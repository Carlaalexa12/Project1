<%- include('partials/header', { title: 'Blog' }) %>

    <section class="text-center mb-12">
        <h2 class="text-3xl font-bold text-green-900 mb-4">From Our Brew Journal</h2>
        <p class="text-green-800 mb-6 text-lg">Stories, tips, and behind-the-scenes from the heart of GreenCoffee.</p>

        <!-- Admin Panel -->
        <div class="mb-6">
            <a href="/crud"
                class="inline-block bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition-colors">
                Admin Panel - CRUD Operations
            </a>
        </div>
    </section>

    <!-- BLOG LIST -->
    <main class="grid md:grid-cols-2 gap-6">
        <% if (typeof blogPosts !=='undefined' && blogPosts.length> 0) { %>
            <% blogPosts.forEach(post=> { %>
                <section class="bg-white p-6 rounded-xl shadow-lg border border-gray-200">
                    <p class="text-sm text-green-600 mb-1">
                        <%= new Date(post.createdAt).toLocaleDateString('en-US') %>
                    </p>
                    <h3 class="text-xl font-semibold text-green-900 mb-2">
                        <%= post.title %>
                    </h3>
                    <p class="text-green-800 mb-4">
                        <%= post.excerpt %>
                    </p>
                    <a href="<%= post.link %>" class="text-green-700 hover:underline font-semibold">Read more â†’</a>
                </section>
                <% }) %>
                    <% } else { %>
                        <p class="text-center text-gray-500 col-span-full">There are no blog posts yet.</p>
                        <% } %>
    </main>

    <%- include('partials/footer') %>