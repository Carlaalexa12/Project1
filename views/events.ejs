<%- include('partials/header', { title: 'Events' }) %>

    <section class="space-y-6">
        <h2 class="text-3xl font-bold text-center text-green-900">Upcoming Events at GreenCoffee</h2>
        <p class="text-green-800 text-center text-lg">
            From coffee brewing workshops to chocolate making classes, and cozy book pairings, there's always something
            brewing at GreenCoffee.
        </p>

        <!-- Admin Panel -->
        <div class="text-center mb-6">
            <a href="/crud"
                class="inline-block bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition-colors">
                Admin Panel - CRUD Operations
            </a>
        </div>

        <!-- EVENTS LIST -->
        <div class="grid md:grid-cols-2 gap-8">
            <% if (typeof events !=='undefined' && events.length> 0) { %>
                <% events.forEach(event=> { %>
                    <div class="bg-green-100 p-6 rounded-xl shadow-lg border border-green-200">
                        <h3 class="text-2xl font-semibold text-green-900 mb-2">
                            <%= event.title %>
                        </h3>
                        <p class="text-green-800 mb-3">
                            <%= event.description %>
                        </p>
                        <p class="text-green-700 mt-2">
                            <%= event.date %><br>
                                <%= event.time %>
                        </p>
                        <p class="text-green-700">
                            <%= event.location %>
                        </p>
                        <button class="mt-4 btn btn-sm btn-outline btn-success">Join Now</button>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <p class="text-center text-gray-500 col-span-full">There are no events yet.</p>
                            <% } %>
        </div>
    </section>

    <%- include('partials/footer') %>