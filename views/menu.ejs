<%- include('partials/header', { title: 'Menu' }) %>

    <section class="text-center mb-12">
        <h2 class="text-3xl font-bold text-green-900 mb-4">Our Menu</h2>
        <p class="text-green-800 text-lg">Crafted with love and sustainability in every sip and bite.</p>
    </section>

    <!-- Coffee Section -->
    <section class="mb-10">
        <h3 class="text-2xl font-semibold text-green-800 mb-4 mt-4 border-b border-green-300 pb-2">Coffee</h3>
        <div class="grid md:grid-cols-2 gap-6">
            <div class="bg-green-50 p-4 rounded-lg shadow">
                <h4 class="font-bold text-green-900">Espresso</h4>
                <p class="text-sm text-green-700">Rich, smooth, and bold. Single or double shot.</p>
                <p class="font-semibold text-green-800 mt-1">$3.50</p>
            </div>
            <div class="bg-green-50 p-4 rounded-lg shadow">
                <h4 class="font-bold text-green-900">Oat Milk Latte</h4>
                <p class="text-sm text-green-700">Creamy and plant-based, with organic espresso.</p>
                <p class="font-semibold text-green-800 mt-1">$5.25</p>
            </div>
            <div class="bg-green-50 p-4 rounded-lg shadow">
                <h4 class="font-bold text-green-900">Iced Americano</h4>
                <p class="text-sm text-green-700">Chilled and refreshing, brewed strong.</p>
                <p class="font-semibold text-green-800 mt-1">$4.00</p>
            </div>
            <div class="bg-green-50 p-4 rounded-lg shadow">
                <h4 class="font-bold text-green-900">Cappuccino</h4>
                <p class="text-sm text-green-700">Espresso with steamed milk and a rich layer of foam.</p>
                <p class="font-semibold text-green-800 mt-1">$4.75</p>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>