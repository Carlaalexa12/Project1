<%- include('partials/header', { title: 'Join Our Team' }) %>
<section class="space-y-10">
  <h2 class="text-3xl font-bold text-green-900">Open Positions</h2>
  <div class="grid md:grid-cols-2 gap-6">
    <% const jobs = [
      { title: "Kitchen Assistant", details: "Full-time · On-site · Starts ASAP" },
      { title: "Delivery Coordinator", details: "Part-time · Remote" },
      { title: "Customer Service Rep", details: "Full-time · Flexible Shifts" },
      { title: "Marketing Intern", details: "Remote · 6-month contract" },
      { title: "Inventory Manager", details: "Full-time · Hybrid" }
    ]; %>
    <% jobs.forEach(j => { %>
        <div class="bg-green-50 p-4 rounded shadow border">
        <h3 class="text-xl font-semibold"><%= j.title %></h3>
        <p><%= j.details %></p>
        <button class="btn btn-outline btn-success mt-2">Apply Now</button>
      </div>
    <% }) %>
  </div>
</section>
<%- include('partials/footer') %>
