<%- include('partials/header', { title: 'Home' }) %>

    <section class="flex flex-col items-center text-center">
        <div class="max-w-3xl px-2"><br />
            <h1 class="mb-2 md:text-6xl font-bold text-black">Welcome to GreenBite</h1>
            <p class="mb-16 text-xl md:text-3xl text-gray-700">
                Organic coffee, handcrafted pastries, and a place that feels like home.
            </p><br />
            <img src="https://distefano.com.au/cdn/shop/articles/shutterstock_473186926.jpg?v=1660636304"
                alt="GreenBite Coffee" class="w-full max-h-[50vh] object-cover" /><br />
            <a href="/order"
                class="btn btn-success btn-wide text-lg bg-green-600 text-white px-6 py-3 rounded-full hover:bg-green-700 transition">
