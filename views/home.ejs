<%- include('partials/header', { title: 'Home' }) %>

    <section class="flex flex-col md:flex-row items-center justify-center px-4 py-12 gap-10 bg-white">
        <div class="md:w-1/2 md:text-left">
            <h1 class="mb-4 text-4xl md:text-6xl font-bold text-black">Welcome to GreenCoffee</h1>
            <p class="mb-8 text-xl md:text-2xl text-gray-700">
                Organic coffee, handcrafted pastries, and a place that feels like home.
            </p><br />
            <a href="/order"
                class="btn btn-success btn-wide text-lg bg-green-600 text-white px-2 py-2 rounded-full hover:bg-green-700 transition">
                Order Now
            </a>
        </div>

        <div class="md:w-1/2">
            <img src="https://distefano.com.au/cdn/shop/articles/shutterstock_473186926.jpg?v=1660636304"
                alt="GreenCoffee" class="w-full h-auto max-h-[500px] object-cover rounded-xl shadow-lg" />
        </div>
    </section>

    <section class="grid md:grid-cols-3 gap-8 text-center mb-24 px-4 pt-24" style="padding-top: 3rem">
        <!-- Menu -->
        <div class="bg-green-50 p-6 rounded-lg shadow hover:shadow-md transition">
            <div class="w-[300px] h-[200px] mx-auto mb-4 overflow-hidden">
                <img src="https://cdn.shopify.com/s/files/1/2783/4082/files/coffee-heart-black-creek-coffee-blog.jpg?v=1620240853"
                    alt="Menu" class="w-full h-full object-contain" />
            </div>
            <h3 class="text-xl font-bold text-green-900 mb-2">Menu</h3>
            <p class="text-green-700 mb-4">Discover our handcrafted drinks and fresh pastries.</p>
            <a href="/menu" class="btn btn-outline btn-success btn-sm">View Menu</a>
        </div>

        <!-- Events -->
        <div class="bg-green-50 p-6 rounded-lg shadow hover:shadow-md transition">
            <div class="w-[300px] h-[200px] mx-auto mb-4 overflow-hidden">
                <img src="https://images.squarespace-cdn.com/content/v1/629974a0f574615edcecee28/bd7e699d-ff0d-4b68-8883-1197df1ebf50/K0108030.JPG"
                    alt="Events" class="w-full h-full object-contain" />
            </div>
            <h3 class="text-xl font-bold text-green-900 mb-2">Events</h3>
            <p class="text-green-700 mb-4">Join us for hands-on workshops and community moments.</p>
            <a href="/events" class="btn btn-outline btn-success btn-sm">See Events</a>
        </div>

        <!-- Blog -->
        <div class="bg-green-50 p-6 rounded-lg shadow hover:shadow-md transition">
            <div class="w-[300px] h-[200px] mx-auto mb-4 overflow-hidden">
                <img src="https://www.shutterstock.com/image-photo/blog-information-website-concept-workplace-600nw-1189626925.jpg"
                    alt="Blog" class="w-full h-full object-contain" />
            </div>
            <h3 class="text-xl font-bold text-green-900 mb-2">Blog</h3>
            <p class="text-green-700 mb-4">Tips, stories, and updates from the world of GreenBite.</p>
            <a href="/blog" class="btn btn-outline btn-success btn-sm">Visit Blog</a>
        </div>
    </section>

    <%- include('partials/footer') %>