<%- include('partials/header', { title: 'Admin Panel - CRUD' }) %>

    <style>
        .btn {
            padding: 8px 16px;
            margin: 4px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.2s ease;
        }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        }

        .btn-green {
            background: linear-gradient(135deg, #059669, #047857);
            color: white;
        }

        .btn-blue {
            background: linear-gradient(135deg, #2563eb, #1d4ed8);
            color: white;
        }

        .btn-red {
            background: linear-gradient(135deg, #dc2626, #b91c1c);
            color: white;
        }

        .form-input {
            border: 2px solid #e5e7eb;
            padding: 12px;
            margin: 4px 0;
            width: 100%;
            border-radius: 8px;
            transition: border-color 0.2s ease;
        }

        .form-input:focus {
            outline: none;
            border-color: #059669;
            box-shadow: 0 0 0 3px rgba(5, 150, 105, 0.1);
        }

        .form-section {
            background: linear-gradient(135deg, #f0fdf4, #ecfdf5);
            padding: 24px;
            margin-bottom: 24px;
            border-radius: 16px;
            border: 1px solid #bbf7d0;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        .card {
            background: white;
            padding: 20px;
            margin: 8px;
            border-radius: 16px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            border: 1px solid #f1f5f9;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #059669, #10b981, #34d399);
        }

        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
        }

        .tab-button {
            padding: 14px 28px;
            border: none;
            background: #f8fafc;
            cursor: pointer;
            border-radius: 12px 12px 0 0;
            margin-right: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
            position: relative;
        }

        .tab-button.active {
            background: linear-gradient(135deg, #059669, #047857);
            color: white;
            box-shadow: 0 4px 8px rgba(5, 150, 105, 0.3);
        }

        .tab-button:hover:not(.active) {
            background: #e2e8f0;
            transform: translateY(-1px);
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block;
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 16px;
        }

        .card-date {
            background: linear-gradient(135deg, #f0fdf4, #ecfdf5);
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.875rem;
            color: #059669;
            font-weight: 500;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 12px;
            line-height: 1.3;
        }

        .card-excerpt {
            color: #6b7280;
            line-height: 1.6;
            margin-bottom: 16px;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .card-link {
            color: #059669;
            text-decoration: none;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 4px;
            transition: all 0.2s ease;
        }

        .card-link:hover {
            color: #047857;
            transform: translateX(2px);
        }

        .card-actions {
            display: flex;
            gap: 8px;
            margin-top: 16px;
            padding-top: 16px;
            border-top: 1px solid #f1f5f9;
        }

        .event-time {
            background: linear-gradient(135deg, #dbeafe, #bfdbfe);
            color: #1e40af;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 500;
            margin-top: 4px;
        }

        .event-location {
            background: linear-gradient(135deg, #fef3c7, #fde68a);
            color: #92400e;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 500;
            margin-top: 4px;
        }

        .stats-badge {
            position: absolute;
            top: 16px;
            right: 16px;
            background: linear-gradient(135deg, #fef3c7, #fde68a);
            color: #92400e;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
        }
    </style>

    <section class="space-y-8"></section>
    <div class="text-center">
        <h2 class="text-4xl font-bold text-green-900 mb-4">Admin Panel</h2>
        <p class="text-green-700 text-lg">Manage your content with ease</p>
    </div>
    <!-- Tab Buttons -->
    <div class="flex justify-center mb-8">
        <button class="tab-button active" onclick="showTab('blog')"> Blog Management</button>
        <button class="tab-button" onclick="showTab('events')"> Events Management</button>
    </div>

    <!-- Events Tab -->
    <div id="events-tab" class="tab-content">
        <h3 class="text-2xl font-bold text-green-900 mb-6 text-center">Events Management</h3>

        <!-- CREATE EVENT FORM -->
        <section class="form-section">
            <h4 class="text-xl font-semibold mb-4 text-green-900"> Add New Event</h4>
            <form action="/addEvent" method="POST" class="grid gap-4">
                <input type="text" name="title" placeholder="Enter event title..." class="form-input" required>
                <textarea name="description" placeholder="Describe your event..." class="form-input" rows="3"
                    required></textarea>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <input type="text" name="date" placeholder="Date (e.g., Saturday, August 14, 2025)"
                        class="form-input" required>
                    <input type="text" name="time" placeholder="Time (e.g., 10:00 AM â€“ 12:00 PM)" class="form-input"
                        required>
                    <input type="text" name="location" placeholder="Location" class="form-input" required>
                </div>
                <button type="submit" class="btn btn-green"> Create Event</button>
            </form>
        </section>

        <!-- EVENTS CARDS GRID -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% if (typeof events !=='undefined' && events.length> 0) { %>
                <% events.forEach((event, index)=> { %>
                    <div class="card">
                        <div class="stats-badge">#<%= index + 1 %>
                        </div>
                        <div class="card-header">
                            <div class="card-date">
                                <%= event.date %>
                            </div>
                        </div>

                        <h4 class="card-title">
                            <%= event.title %>
                        </h4>
                        <p class="card-excerpt">
                            <%= event.description %>
                        </p>

                        <div class="space-y-2">
                            <div class="event-time">
                                <%= event.time %>
                            </div>
                            <div class="event-location">
                                <%= event.location %>
                            </div>
                        </div>

                        <div class="card-actions">
                            <button class="btn btn-blue" onclick="toggleEditForm('event-<%= event._id %>')">
                                Edit
                            </button>
                            <button class="btn btn-red" onclick="deleteEvent('<%= event._id %>')">
                                Delete
                            </button>
                        </div>
                        <!-- HIDDEN EDIT FORM -->
                        <div id="event-<%= event._id %>" class="hidden mt-4 p-4 bg-gray-50 rounded-lg">
                            <form action="/updateEvent" method="POST" class="grid gap-3">
                                <input type="hidden" name="updateId" value="<%= event._id %>">
                                <input type="text" name="title" value="<%= event.title %>" class="form-input"
                                    placeholder="Event Title">
                                <textarea name="description" class="form-input" placeholder="Event Description"
                                    rows="2"><%= event.description %></textarea>
                                <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                                    <input type="text" name="date" value="<%= event.date %>" class="form-input"
                                        placeholder="Date">
                                    <input type="text" name="time" value="<%= event.time %>" class="form-input"
                                        placeholder="Time">
                                    <input type="text" name="location" value="<%= event.location %>" class="form-input"
                                        placeholder="Location">
                                </div>
                                <button type="submit" class="btn btn-blue">Save Changes</button>
                            </form>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <div class="col-span-full text-center py-12">
                                <div class="text-6xl mb-4"></div>
                                <p class="text-gray-500 text-lg">No events found. Create your first event!</p>
                            </div>
                            <% } %>
        </div>
    </div>

    </section>
    <script>
        function showTab(tabName) {
            // Hide all tab contents
            const tabContents = document.querySelectorAll('.tab-content');
            tabContents.forEach(content => {
                content.classList.remove('active');
            });

            // Remove active class from all tab buttons
            const tabButtons = document.querySelectorAll('.tab-button');
            tabButtons.forEach(button => {
                button.classList.remove('active');
            });

            // Show selected tab content
            document.getElementById(tabName + '-tab').classList.add('active');

            // Add active class to clicked button
            event.target.classList.add('active');
        }

        function toggleEditForm(elementId) {
            const formElement = document.getElementById(elementId);
            formElement.classList.toggle('hidden');
        }

        function deleteEvent(eventId) {
            if (confirm('Are you sure you want to delete this event?')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/deleteEvent';

                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'deleteId';
                input.value = eventId;

                form.appendChild(input);
                document.body.appendChild(form);
                form.submit();
            }
        }

    </script>

    <%- include('partials/footer') %>