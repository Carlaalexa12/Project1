<%- include('partials/header', { title: 'Admin Panel - CRUD' }) %>
<section class="space-y-8"></section>
<div class="text-center">
            <h2 class="text-4xl font-bold text-green-900 mb-4">Admin Panel</h2>
            <p class="text-green-700 text-lg">Manage your content with ease</p>
        </div>
        <!-- Tab Buttons -->
        <div class="flex justify-center mb-8">
            <button class="tab-button active" onclick="showTab('blog')"> Blog Management</button>
            <button class="tab-button" onclick="showTab('events')"> Events Management</button>
        </div>

        <!-- Events Tab -->
        <div id="events-tab" class="tab-content">
            <h3 class="text-2xl font-bold text-green-900 mb-6 text-center">Events Management</h3>
        
        <!-- CREATE EVENT FORM -->
        <section class="form-section">
                <h4 class="text-xl font-semibold mb-4 text-green-900"> Add New Event</h4>
                <form action="/addEvent" method="POST" class="grid gap-4">
                    <input type="text" name="title" placeholder="Enter event title..." class="form-input" required>
                    <textarea name="description" placeholder="Describe your event..." class="form-input" rows="3"
                        required></textarea>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <input type="text" name="date" placeholder="Date (e.g., Saturday, August 14, 2025)"
                            class="form-input" required>
                        <input type="text" name="time" placeholder="Time (e.g., 10:00 AM â€“ 12:00 PM)" class="form-input"
                            required>
                        <input type="text" name="location" placeholder="Location" class="form-input" required>
                    </div>
                    <button type="submit" class="btn btn-green"> Create Event</button>
                </form>
            </section>

            <!-- EVENTS CARDS GRID -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% if (typeof events !=='undefined' && events.length> 0) { %>
                    <% events.forEach((event, index)=> { %>
                        <div class="card">
                            <div class="stats-badge">#<%= index + 1 %>
                            </div>
                            <div class="card-header">
                                <div class="card-date">
                                    <%= event.date %>
                                </div>
                            </div>

                            <h4 class="card-title">
                                <%= event.title %>
                            </h4>
                            <p class="card-excerpt">
                                <%= event.description %>
                            </p>

                            <div class="space-y-2">
                                <div class="event-time">
                                    <%= event.time %>
                                </div>
                                <div class="event-location">
                                    <%= event.location %>
                                </div>
                            </div>

                            <div class="card-actions">
                                <button class="btn btn-blue" onclick="toggleEditForm('event-<%= event._id %>')">
                                    Edit
                                </button>
                                <button class="btn btn-red" onclick="deleteEvent('<%= event._id %>')">
                                    Delete
                                </button>
                            </div>

</section>

<%- include('partials/footer') %>